{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2017"],
      "target": "es2017",
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "allowJs": true,
      "checkJs": false,
      "outDir": "dist",
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "dist", "reports"]
  }
  